<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/background_thanhvien_item">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_phieumuon_item">
        <ImageView
            android:id="@+id/img"
            android:layout_weight="2"
            android:src="@drawable/phieumuonitem"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/tvMaPM"
                android:textSize="14dp"
                android:text="MaPM"
                android:textColor="#C8DBEA"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvTenTVPM"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#C8DBEA"
                android:text="TenTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvTenCoursePM"
                    android:textSize="16dp"
                    android:textColor="#C8DBEA"
                    android:text="TenCourse"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvTraCourse"
                    android:layout_weight="1"
                    android:text="HoanThanh"
                    android:textAlignment="textEnd"
                    android:textColor="#C8DBEA"
                    android:textSize="14dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvTienThue"
                    android:textSize="14dp"
                    android:textColor="#C8DBEA"
                    android:text="TienThue"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvNgayPM"
                    android:textSize="14dp"
                    android:textColor="#C8DBEA"
                    android:text="Ngay"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgDeletePM"
            android:layout_weight="1"
            android:src="@drawable/ic_delete"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="40dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
