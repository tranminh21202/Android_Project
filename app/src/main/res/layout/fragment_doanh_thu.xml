<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8D6BC"
    tools:context=".fragment.DoanhThuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <Button
            android:id="@+id/btnTuNgay"
            android:layout_weight="1"
            android:text="Từ ngày"
            android:textStyle="bold"
            android:background="#99AE82"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edTuNgay"
            android:layout_weight="2"
            android:textSize="16dp"
            android:hint="YYYY/MM/DD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <Button
            android:id="@+id/btnDenNgay"
            android:layout_weight="1"
            android:text="Đến ngày"
            android:textStyle="bold"
            android:background="#99AE82"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edDenNgay"
            android:layout_weight="2"
            android:textSize="16dp"
            android:hint="YYYY/MM/DD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnDoanhThu"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Doanh Thu"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#99AE82"
        android:drawableStart="@drawable/ic_money"
        android:layout_width="155dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDoanhThu"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#AE5953"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>